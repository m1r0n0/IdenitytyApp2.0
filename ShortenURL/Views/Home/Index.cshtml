@{
    ViewData["Title"] = "Home Page";
}
@model ShortenURL.Models.IndexViewModel

<h1>Create your Short URL!</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="FullUrl" class="control-label"></label>
                <input asp-for="FullUrl" class="form-control" />
                <span asp-validation-for="FullUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
